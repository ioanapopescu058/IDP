<resources>

    <!-- Base application theme. -->
    <style name="FindMeAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
    </style>

    <!-- Activity with no Title -->
    <style name="ThemeOverlay.MyNoTitleActivity" parent="FindMeAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Buttons -->
    <style name="ThemeOverlay.MyButtons" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@android:color/holo_blue_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
